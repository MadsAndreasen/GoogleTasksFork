{
  "manifest_version": 2,
  "name": "Google Tasks (by Google)",
  "version": "1.0",
  "description": "Official Chrome Extension for Google Tasks",
  "browser_action": {
    "default_icon": "images/tasks-19x19.png",
    "default_title": "Google Tasks",
    "default_popup": "popup.html"
  },
  "background_page": "background.html",
  "omnibox": {
    "keyword": "t"
  },
  "icons": {
    "16": "images/tasks-16x16.png",
    "19": "images/tasks-19x19.png",
    "48": "images/tasks-48x48.png"
  },
  "permissions": [
    "contextMenus",
    "notifications",
    "tabs",
    "http://www.google.com/",
    "https://www.google.com/",
    "http://www.googleapis.com/",
    "https://www.googleapis.com/"
  ]
}
